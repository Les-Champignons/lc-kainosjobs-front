{% extends "templates/layout.njk" %}

{% block beforeContent %}
    {{ super() }}

    {{ govukBreadcrumbs({
        items: [
            {
                text: "Home",
                href: "/"
            },
            {
                text: "Job Roles",
                href: "/job-roles"
            },
            {
                text: "Job Role Information",   
                href: "/job-role-information"
            },
            {
                text: "Job Application Form"            
            }
        ]
        }) }}
{% endblock %}
{% block content %}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l govuk-!-static-padding-bottom-5">Upload your CV</h1>
        <p class="govuk-body govuk-!-static-padding-bottom-5"><b>Choose file</b> from your device or <b>Drag and Drop</b></p>
        
        <form action="/job-form" class="form" method="post" enctype="multipart/form-data">
            <input type="file" name="cv"></input>
            <input type="hidden" name="status" value="Hired">
            <input type="hidden" name="jobRoleId" value="{{ jobRoleDetails.jobRoleId }}">
            {{ govukButton({
            text: "Upload"
            }) }}
        </form>
    </div>
</div>

{% endblock %}